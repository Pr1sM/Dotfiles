# This is Git's per-user configuration file.
#
# Author: Pr1sM (Srinivas Dhanwada)
[user]
	name = Srinivas Dhanwada

[core]
    excludesfile = ~/.gitignore_global

[alias]
    st = status
    br = branch
    co = checkout
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    clog = log --graph --date=short --pretty=format:\"%C(124)%ad %C(24)%h %C(34)%an %C(252)%s%C(178)%d\"
    d = difftool

# Sourcetree is my default repo management tool
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[commit]
	template = /Users/dhanwada/.stCommitMsg
	gpgsign = true

# use git-lfs for large files
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# specify gpg2 instead of gpg (for macOS)
[gpg]
    program = /usr/local/bin/gpg2

# Force ssh instead of https
[url "ssh://git@github.com:"]
	insteadOf = https://github.com/
